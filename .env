
# Environment configuration
NODE_ENV=development

# Disable warnings for specific TypeScript errors
TS_NODE_IGNORE="node_modules"

# Set Vite dependency preprocessing options
VITE_DEPS_FORCE_OPTIMIZATION=true

# TypeScript compiler options - skipLibCheck to ignore errors in library definitions
TS_NODE_COMPILER_OPTIONS={"skipLibCheck":true,"noImplicitAny":false,"suppressImplicitAnyIndexErrors":true,"esModuleInterop":true}

# Tell TypeScript to use a more lenient mode for external libraries
SKIP_PREFLIGHT_CHECK=true

# Add forced dependencies resolution
VITE_FORCED_RESOLVE=true

# Avoid npm directory rename issues
NPM_CONFIG_LEGACY_PEER_DEPS=true

# Configure npm to use safer directory operations
NPM_CONFIG_UNSAFE_PERM=false
NPM_CONFIG_FORCE=true
NPM_CONFIG_NO_SHRINKWRAP=true

# Add timeout settings - increased for better reliability
NPM_CONFIG_FETCH_TIMEOUT=1200000
NPM_CONFIG_FETCH_RETRY_MINTIMEOUT=120000
NPM_CONFIG_FETCH_RETRY_MAXTIMEOUT=300000
BUN_INSTALL_TIMEOUT=600000
